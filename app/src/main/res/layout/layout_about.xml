<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_component"
        android:orientation="horizontal">

        <View
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/chevron_left"
            android:contentDescription="@string/common_icon_back_content_description" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/layout_about_title"
            android:textColor="@color/text_main"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="@string/common_copyright_yancey"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/copyright"
        android:layout_below="@id/header"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_corner_20dp"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_toStartOf="@id/current_version"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_current_version"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/current_version"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:textColor="@color/text_secondary"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_toStartOf="@id/author"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_author"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:textColor="@color/text_secondary"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_toStartOf="@id/qq_personal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_qq_personal"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/qq_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:textColor="@color/text_secondary"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="5dp"
                        android:layout_toStartOf="@id/qq_group"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_qq_group"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <TextView
                        android:id="@+id/qq_group"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:textColor="@color/text_secondary"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_bilibili"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_bilibili"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/external_link"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_core_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_core_source"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/external_link"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_app_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_app_source"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/external_link"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_corner_20dp"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/btn_release_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_release_note"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/chevron_right"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_latest_release_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_latest_release_note"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/external_link"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_issue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_issue"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/external_link"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_donate"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/external_link"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_privacy_policy"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/chevron_right"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:id="@+id/btn_open_source_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="30dp"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:stateListAnimator="@null"
                        android:text="@string/layout_about_open_source_terms"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        tools:ignore="RelativeOverlap" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/chevron_right"
                        android:contentDescription="@string/common_icon_jump_content_description"
                        android:gravity="end" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
